<clickhouse>
    <prometheus>
        <port>9363</port>
        <handlers>
            <my_rule_1>
                <url>/metrics</url>
                <handler>
                    <type>expose_metrics</type>
                    <metrics>true</metrics>
                    <events>true</events>
                    <asynchronous_metrics>true</asynchronous_metrics>
                    <errors>true</errors>
                    <histograms>true</histograms>
                    <dimensional_metrics>true</dimensional_metrics>
                </handler>
            </my_rule_1>
        </handlers>
    </prometheus>
</clickhouse>